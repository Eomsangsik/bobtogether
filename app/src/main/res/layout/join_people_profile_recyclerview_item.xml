<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/joined_item_margin"
    android:layout_marginRight="@dimen/joined_item_margin"
    android:layout_marginTop="@dimen/joined_item_margin"
    android:background="@drawable/sub_layout"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/joined_iamge"
        android:layout_width="@dimen/joined_profile_img_size"
        android:layout_height="@dimen/joined_profile_img_size"
        android:layout_margin="@dimen/joined_profile_img_margin"
        android:src="@drawable/ic_person_black_48dp"
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/joined_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/joined_state_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />


    </LinearLayout>


</LinearLayout>